import random

def start_game():
    print("Добро пожаловать в игру 'Лабиринт'!")
    print("Ваша задача - найти выход из лабиринта. Каждое ваше действие будет влиять на ваши шансы на успех.")
    
    # Инициализация переменных
    moves = 0  # Подсчёт количества ходов
    exit_found = False  # Флаг для проверки, найден ли выход

    while not exit_found:
        print("\nВы находитесь в тупике. Ваши возможные действия:")
        print("1. Повернуть налево")
        print("2. Повернуть направо")
        print("3. Идти прямо")

        # Получаем выбор пользователя
        choice = input("Выберите действие (1 - налево, 2 - направо, 3 - прямо): ")

        # Проверка на валидность ввода
        if choice not in ['1', '2', '3']:
            print("Ошибка! Выберите одно из предложенных действий: 1, 2 или 3.")
            continue

        # Подсчёт ходов
        moves += 1

        # Проверяем вероятность нахождения выхода (1 к 10)
        if random.randint(1, 10) == 1:
            exit_found = True
            print(f"\nПоздравляем! Вы нашли выход из лабиринта за {moves} ходов.")
            break
        else:
            print(f"\nВы сделали {moves} ходов, но выхода нет. Продолжайте искать!")

if __name__ == "__main__":
    start_game()

