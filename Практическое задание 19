import urllib.request
import webbrowser

try:
    urllib.request.urlopen("http://www.google.com", timeout=3)
except IOError:
    print("üîå –°–æ–µ–¥–∏–Ω–µ–Ω–∏—è –Ω–µ—Ç.")
else:
    query = input("–í–≤–µ–¥–∏—Ç–µ –ø–æ–∏—Å–∫–æ–≤—ã–π –∑–∞–ø—Ä–æ—Å: ")

    while True:
        print("–í—ã–±–µ—Ä–∏—Ç–µ –ø–æ–∏—Å–∫–æ–≤—É—é —Å–∏—Å—Ç–µ–º—É:\n1 ‚Äî Google\n2 ‚Äî Yandex")
        choice = input("–í–∞—à –≤—ã–±–æ—Ä (1 –∏–ª–∏ 2): ")

        if choice == "1":
            url = f"https://www.google.com/search?q={query}"
            webbrowser.open_new_tab(url)
            break
        elif choice == "2":
            url = f"https://yandex.ru/search/?text={query}"
            webbrowser.open_new_tab(url)
            break
        else:
            print("–í—ã–±–µ—Ä–∏—Ç–µ –∏–∑ –ø—Ä–µ–¥–ª–æ–∂–µ–Ω–Ω—ã—Ö –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤.")
